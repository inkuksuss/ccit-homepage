header.header
    .header__wrapper
        .header__column
            a(href=routes.home)
                img(src="/image/basicimg.png")
        .header__column
            form(action=routes.search method="GET")
                input(type="text", placeholder="검색어를 입력해주세요.." name="term")
        .header__column
            ul  
                if !loggedUser
                    li
                        a(href=routes.join) Join
                    li
                        a(href=routes.login) Log In

                else if (loggedUser.provider === "kakao")
                    li
                        a(href=`/boards${routes.upload}`) Upload
                    li
                        a(href=routes.me) Profile
                    li
                        a.social-logout--kakao(href="javascript:void(0);" onClick="kakaoLogout();return false;") Logout
                else 
                    li
                        a(href=`/boards${routes.upload}`) Upload
                    li
                        a(href=routes.me) Profile
                    li
                        a(href=routes.logout)#jsKakaoLogout Log Out
