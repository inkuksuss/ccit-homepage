extends layouts/main

block content
    .form-container
        form(action=`/boards${routes.editBoard}`, method="post")
            input(type="text", placeholder="Title", name="title")
            textarea(name="description", placeholder="Description")
            input(type="submit", value="Update Board")
        a.form-container__link.form-container__link--delete(href=`/boards${routes.deleteBoard}`) Delete Board 
