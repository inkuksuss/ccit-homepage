extends layouts/main
include mixins/boardBlock

block content
    .search__header
        h3 Searching for #{searchingBy}
    .search__boards
        if boards.length === 0
            h5 No boards Found
        each item in boards
            +boardBlock({
                title:item.title,
                views:item.views,
                boardFile:item.fileUrl,
                id:item.id
            }) 