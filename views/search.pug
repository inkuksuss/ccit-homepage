extends layouts/main
include mixins/videoBlock
include mixins/searchBlock

block content
    .wrapper
        .search__header
            h3 "#{searchingBy}" 를 찾았습니다.
        p.search_type 동영상
        .search__videos
            if videos.length === 0
                h5 동영상을 찾을수 없습니다...
            each item in videos
                +videoBlock({
                    id:item.id,
                    title:item.title,
                    views:item.views,
                    videoFile:item.videoUrl
                })

        .search__photos
        p.search_type 사진
            if photos.length === 0
                h5 사진을 찾을수 없습니다...
        .search__photos
            each item in photos
                +photoBlock({
                    id:item.id,
                    title:item.title,
                    views:item.views,
                    photoFile:item.photoUrl
                })