extends layouts/main
include mixins/boardBlock

block content
    .user-profile
        if (user.avatar !== "basicimg")
            .user-profile__header    
                img.u-avatar(src=`${user.avatar}`)
                h4.profile__username=user.name
        else
            .user-profile__header    
                img.u-avatar(src='../image/basicimg.png')
                h4.profile__username=user.name

        if !(loggedUser.provider === 'kakao' || 'google')
            .user-profile__btns
                a(href=`/users${routes.editProfile}`)
                    button ‚úèÔ∏è Edit Profile
                a(href=`/users${routes.changePassword}`)
                    button üîí Change Password 
    .home-videos
            each item in user.boards 
                +boardBlock({
                    id: item.id,
                    title: item.title,
                    views: item.views,
                    boardFile: item.fileUrl
                })